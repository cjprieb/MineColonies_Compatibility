<window size="190 244" pause="false" lightbox="false">
	<image
		source="minecolonies:textures/gui/builderhut/builder_paper.png"
		size="190 244" />
	<label id="desc" size="130 11" pos="30 14" color="black"
		textalign="MIDDLE" />
	<input id="input" size="150 18" pos="20 30" maxlength="25" />

	<list id="resources" size="167 136" pos="13 50">
		<box size="100% 17" linewidth="1">
			<itemicon id="inputIcon" size="16 16" pos="0 0" />
			<image
				source="minecolonies_compatibility:textures/gui/arrow.png"
				size="16 16" pos="16 0" />
			<itemicon id="outputIcon" size="16 16" pos="32 0" />
			<label id="outputName" size="77 12" pos="52 1" color="white" />
			<buttonimage
				label="$(com.minecolonies.coremod.gui.workerhuts.retrieveOn)"
				id="switch" pos="129 1" size="29 15"
				source="minecolonies:textures/gui/builderhut/builder_button_very_small.png"
				textcolor="black" />
		</box>
	</list>
	<buttonimage
		label="$(com.minecolonies.coremod.gui.workerhuts.resetdefault)"
		id="resetDefault" size="86 17" pos="50 194"
		source="minecolonies:textures/gui/builderhut/builder_button_medium.png"
		textcolor="black" />

	<buttonimage
		label="$(minecolonies_tweaks.gui.toogle_in_current)"
		id="toggleInCurrent" size="80 17" pos="14 211"
		source="minecolonies:textures/gui/builderhut/builder_button_medium.png"
		textcolor="black" />

	<buttonimage
		label="$(minecolonies_tweaks.gui.reset_in_current)"
		id="resetInCurrent" size="80 17" pos="98 211"
		source="minecolonies:textures/gui/builderhut/builder_button_medium.png"
		textcolor="black" />
</window>